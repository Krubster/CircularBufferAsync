<Window x:Class="WPFViewer.ArgumentEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Argument Editor" Height="400" Width="300">
    <DockPanel>
        <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10" x:Name="ArgsPanel"/>
        </ScrollViewer>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Vertical" Margin="10">
            <CheckBox Content="Immediate Send" IsChecked="{Binding ImmediateSend}"/>
            <Button Content="Set" Click="OnSetClicked" Margin="0,5,0,0"/>
        </StackPanel>
    </DockPanel>
</Window>